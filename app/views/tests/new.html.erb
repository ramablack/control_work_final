<h2>Create new test</h2>

<%= form_for @test do |f| %>

    <div>
      <%= f.label :Название %> <br/>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div>
      <%= f.label :Описание %> <br/>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div>
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>

<% end %>